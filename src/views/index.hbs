<div class="mx-3">
  <h1>
    Productos
  </h1>
  <div class="formulario">
    <div class="column" id="cardContainer">
      {{#each productos}}
        <div
          class="formu"
          style="width: 18rem; border: 1px solid #ccc; margin: 10px; padding: 10px;"
        >
          <img src="{{ this.img }}" class="card-img" alt="{{ this.title }}" /><br />
          <div class="card-body">
            <div style="display: flex; align-items: center;" ><br />
              <strong>Title</strong> {{ this.title }}<br />
              <small style="color: #6c757d;">Precio ${{ this.price }} </small> 
            </div>
            <h4 style="color: #485c5f; margin-top: 5px;">Categoria:
              {{ this.category }}<br/></h4> <br />
            
            <p style="margin-top: 10px;">{{this.description}} <br />
              <span style="color: #6c757d;">Stock: {{this.stock}}</span></p> <br />
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

<script type="module" src="/src/public/main.js"></script>